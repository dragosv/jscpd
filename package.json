{
  "name": "@jscpd/monorepo",
  "packageManager": "yarn@4.0.2",
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "3.4.0-rc.0",
  "scripts": {
    "commit": "npx git-cz",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "nyc yarn run test:unit",
    "test:unit": "mocha -r source-map-support/register -r ts-node/register packages/*/__tests__/**/*.test.ts",
    "coverage": "run-s build test cov:html cov:check",
    "lint": "eslint --cache --ext .ts packages/*/src",
    "cov": "run-s build test cov:html && open coverage/lcov-report/index.html",
    "cov:html": "nyc report --reporter=lcov",
    "cov:check": "nyc report && nyc check-coverage --lines 90 --functions 90 --branches 77",
    "doc": "run-s doc:html && open docs/index.html",
    "doc:html": "typedoc --out ./docs ./packages",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "all": "run-s reset test cov:check doc:html",
    "changelog": "lerna-changelog"
  },
  "nyc": {
    "reporter": [
      "lcov"
    ],
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "exclude": [
      "packages/examples/**"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kucherenko/jscpd.git"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.7.0",
    "chai": "^4.3.10",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "gh-pages": "^6.1.0",
    "git-cz": "^4.9.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.1",
    "lerna-changelog": "^2.2.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^8.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "typedoc": "~0.25.4",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "readmeFilename": "README.md",
  "dependencies": {
    "codecov": "^3.8.2"
  }
}
